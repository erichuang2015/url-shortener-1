{
  "name": "url-shortener",
  "version": "0.0.1",
  "private": true,
  "description": "Веб-приложение для сжатия ссылок",
  "main": "app.js",
  "scripts": {
    "checkDB" : "pgrep mongod > /dev/null || echo 'mongod process is not running!'",

    "start": "DEBUG=url-short:* node app",
    "develop": "export NODE_ENV=development && DEBUG=url-short:* nodemon app",
    "pretest": "npm run checkDB",
    "test": "export NODE_ENV=testing && mocha test/*.test.js",
    "precoverage": "npm run checkDB",
    "coverage": "export NODE_ENV=testing && istanbul cover _mocha"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "debug": "^3.0.0",
    "express": "^4.15.4",
    "mongoose": "^4.11.8",
    "path": "^0.12.7",
    "pug": "^2.0.0-rc.3",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "chance": "^1.0.11",
    "rewire": "^2.5.2",
    "supertest": "^3.0.0",
    "supports-color": "^4.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taxnuke/url-shortener.git"
  },
  "author": "Semyon Fomin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/taxnuke/url-shortener/issues"
  },
  "homepage": "https://github.com/taxnuke/url-shortener#readme"
}
