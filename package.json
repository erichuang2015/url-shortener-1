{
  "private": true,
  "main": "source/server.js",
  "scripts": {
    "postinstall": "bower install; if [ ! -d 'logs' ]; then mkdir 'logs'; fi",
    "start": "DEBUG=url-short:* node source/server",
    "deploy": "git push heroku master",
    "develop": "(nohup browser-sync start --proxy localhost:9000 --files source/gui >> logs/browsersync.log 2>&1 &) && export PORT=9000 && export NODE_ENV=development && DEBUG=url-short:* nodemon source/server",
    "pretest": "eslint --ignore-path .gitignore . --fix",
    "test": "export NODE_ENV=testing && mocha --timeout 120000 test/*.test.js",
    "precoverage": "if [ ! -d 'reports' ]; then mkdir 'reports'; else rm -rf 'reports/coverage'; fi",
    "coverage": "export NODE_ENV=testing && istanbul cover _mocha",
    "postcoverage": "mv ./coverage ./reports/coverage",
    "premutate": "if [ ! -d 'reports' ]; then mkdir 'reports'; else rm -rf 'reports/mutation'; fi",
    "mutate": "export NODE_ENV=testing && stryker run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm t",
      "pre-push": "npm t"
    }
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "debug": "^3.0.0",
    "express": "^4.15.4",
    "mongoose": "^4.11.8",
    "morgan": "^1.9.0",
    "path": "^0.12.7",
    "pug": "^2.0.0-rc.3",
    "request": "^2.83.0",
    "require-dir": "^0.3.2",
    "shortid": "^2.2.8",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "bower": "1.8.2",
    "chai": "^4.1.1",
    "chance": "^1.0.11",
    "codeclimate-test-reporter": "^0.5.0",
    "eslint": "^5.6.0",
    "husky": "^1.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.0",
    "mockgoose": "^7.3.3",
    "rewire": "^2.5.2",
    "stryker": "^0.29.2",
    "stryker-api": "^0.21.1",
    "stryker-html-reporter": "^0.16.2",
    "stryker-javascript-mutator": "^0.10.0",
    "stryker-mocha-framework": "^0.12.2",
    "stryker-mocha-runner": "^0.14.2",
    "supertest": "^3.0.0",
    "supports-color": "^4.2.1"
  }
}
