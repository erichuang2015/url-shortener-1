{
  "private": true,
  "main": "source/server.js",
  "scripts": {
    "postinstall": "bower install; if [ ! -d 'logs' ]; then mkdir 'logs'; fi && npm run webpack",
    "start": "DEBUG=url-short:* node source/server",
    "deploy": "git push heroku master",
    "develop": "export NODE_ENV=development && export DEBUG=url-short:* && gulp develop",
    "pretest": "eslint --ignore-path .eslintignore . --fix",
    "test": "export NODE_ENV=testing && mocha --timeout 120000 test/*.test.js",
    "precoverage": "if [ ! -d 'reports' ]; then mkdir 'reports'; else rm -rf 'reports/coverage'; fi",
    "coverage": "export NODE_ENV=testing && istanbul cover _mocha",
    "postcoverage": "mv ./coverage ./reports/coverage",
    "premutate": "if [ ! -d 'reports' ]; then mkdir 'reports'; else rm -rf 'reports/mutation'; fi",
    "mutate": "export NODE_ENV=testing && stryker run",
    "show-coverage": "open ./reports/coverage/lcov-report/index.html",
    "show-msi": "open ./reports/mutation/html/index.html",
    "webpack": "gulp webpack"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm t",
      "pre-push": "npm t"
    }
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "debug": "^3.0.0",
    "express": "^4.15.4",
    "mongoose": "^4.11.8",
    "morgan": "^1.9.0",
    "path": "^0.12.7",
    "request": "^2.83.0",
    "require-dir": "^0.3.2",
    "shortid": "^2.2.8",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-loader": "^8.0.4",
    "bower": "1.8.2",
    "browser-sync": "^2.24.7",
    "chai": "^4.1.1",
    "chance": "^1.0.11",
    "codeclimate-test-reporter": "^0.5.0",
    "eslint": "^5.6.0",
    "gulp": "^3.9.1",
    "gulp-nodemon": "^2.2.1",
    "husky": "^1.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.0",
    "mockgoose": "^7.3.3",
    "nodemon": "^1.18.4",
    "stryker": "^0.29.2",
    "stryker-api": "^0.21.1",
    "stryker-html-reporter": "^0.16.2",
    "stryker-javascript-mutator": "^0.10.0",
    "stryker-mocha-framework": "^0.12.2",
    "stryker-mocha-runner": "^0.14.2",
    "supertest": "^3.0.0",
    "webpack": "^4.20.2",
    "webpack-stream": "^5.1.1"
  }
}
